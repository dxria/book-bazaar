{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@assets/*": ["./src/assets/*"],
            "@app/*": ["./src/app/*"],
            "@plugins/*": ["./src/plugins/*"],
            "@components/*": ["./src/components/*"],
            "@constants/*": ["./src/constants/*"],
            "@helpers/*": ["./src/helpers/*"],
            "@svg/*": ["./public/svg/*"],
            "@png/*": ["./public/png/*"],
            "@utils/*": ["./src/utils/*"],
            "@prisma/*": ["./prisma/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
